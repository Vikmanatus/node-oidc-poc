{
  "name": "node-oidc-poc",
  "version": "1.0.0",
  "description": "A simple starterkit providing boilerplate code for basic Express application",
  "main": "index.js",
  "scripts": {
    "start": "node ./build/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify build/src/server.js",
    "watch": "tsc -w",
    "build": "rm -rf ./build && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "generate-postman-collection": "yarn build && ts-node-dev -r tsconfig-paths/register --no-notify build/scripts/generate.postman.collection.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vikmanatus/node-oidc-poc.git"
  },
  "keywords": [
    "Express",
    "Typescript",
    "NodeJs"
  ],
  "author": "Viktor Stoyanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vikmanatus/node-oidc-poc/issues"
  },
  "homepage": "https://github.com/Vikmanatus/node-oidc-poc#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/keygrip": "^1.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.11",
    "@types/oidc-provider": "^7.14.0",
    "@types/postman-collection": "^3.5.7",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "morgan": "^1.10.0",
    "postman-collection": "^4.1.6",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "keygrip": "^1.1.0",
    "mongodb": "^4.12.1",
    "oidc-provider": "^7.14.3"
  }
}
